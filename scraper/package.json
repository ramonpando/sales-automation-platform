{
  "name": "sales-scraper",
  "version": "2.0.0",
  "description": "PyMEs lead scraper for Mexican business directories",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "node --test",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "health": "curl -f http://localhost:3000/health",
    "scrape": "node src/cli.js",
    "backup": "node src/backup.js"
  },
  "keywords": [
    "scraper",
    "leads",
    "pymes",
    "mexican-business",
    "pages-amarillas",
    "business-intelligence"
  ],
  "author": "Ram√≥n Pando <rpando@swip.mx>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.5.0",
    "playwright": "^1.40.0",
    "winston": "^3.11.0",
    "pg": "^8.11.3",
    "redis": "^4.6.0",
    "ioredis": "^5.3.2",
    "validator": "^13.11.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "rate-limiter-flexible": "^3.0.8",
    "prom-client": "^15.0.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "nodemon": "^3.0.2",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ramonpando/sales-automation-platform.git",
    "directory": "scraper"
  },
  "bugs": {
    "url": "https://github.com/ramonpando/sales-automation-platform/issues"
  },
  "homepage": "https://github.com/ramonpando/sales-automation-platform/tree/main/scraper#readme",
  "config": {
    "scraper": {
      "defaultConcurrency": 5,
      "defaultDelay": 200,
      "maxRetries": 3,
      "timeout": 30000
    }
  },
  "optionalDependencies": {
    "sharp": "^0.32.6"
  }
